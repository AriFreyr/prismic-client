{
  "name": "@prismicio/client",
  "version": "5.0.0-alpha.0",
  "private": true,
  "description": "JavaScript development kit for prismic.io",
  "keywords": [
    "prismic",
    "prismic.io",
    "cms",
    "content",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:prismicio/prismic-javascript.git"
  },
  "license": "Apache-2.0",
  "author": "Prismic <contact@prismic.io> (https://prismic.io)",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.es.js"
    },
    "./predicate": {
      "require": "./dist/predicate.js",
      "import": "./dist/predicate.es.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "siroc build",
    "dev": "npm run build -- --watch",
    "lint": "eslint src/** test/**",
    "test": "npm run lint && ava"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "./test/**/*.test.ts"
    ],
    "require": [
      "ts-eager/register"
    ],
    "verbose": true
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "ava": "^3.15.0",
    "eslint": "^7.25.0",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.4.1",
    "siroc": "^0.9.2",
    "ts-eager": "^1.1.3",
    "type-fest": "^1.0.2",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit"
  }
}
