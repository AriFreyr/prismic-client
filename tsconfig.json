{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "target": "ESNext",
    "module": "ESNext",
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,

    "lib": ["ESNext", "DOM"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
